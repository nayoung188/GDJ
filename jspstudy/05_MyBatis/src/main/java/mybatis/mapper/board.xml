<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="mapper의 패키지 경로" -->  
  
<mapper namespace="mybatis.mapper.board">

	<!-- 
		mapper
		1. 쿼리문 작성하는 곳
		2. 모든 쿼리문에 세미콜론(;) 금지
		3. <select>, <insert>, <update>, <delete> 태그 사용
	 -->
	 
	 <!-- 
	 	1. 게시글 목록 
	 		1) parameterType : 필요없음
	 		2) resultType (리턴값) : 목록보기, 상세보기 모두 domain패키지의 Board를 반환
	 -->
	 <select id="selectAllBoards" resultType="Board">
	 	SELECT BOARD_NO, TITLE, CONTENT, CREATE_DATE
	 	  FROM BOARD
	 	 ORDER BY BOARD_NO DESC
	 </select>
	 
	 <!-- 
	 	2. 게시글 상세 보기
	 		1) parameterType : int boardno
	 		2) resultType : 목록보기, 상세보기 모두 domain패키지의 Board를 반환
	  -->
	  <select id="selectBoardByNo" parameterType="int" resultType="Board">
	  	SELECT BOARD_NO, TITLE, CONTENT, CREATE_DATE
	  	  FROM BOARD
	  	 WHERE BOARD_NO = #{boardNo}
	  </select>
	  
	  <!--  
	  	3. 게시글 삽입
	  		1) parameterType : Board board
	  		2) resultType : 작성하면 안됩니다. 자동으로 int로 처리된다.
	  -->
	  <insert id="insertBoard" parameterType="Board">
	  	  INSERT INTO BOARD
	  	  	(BOARD_NO, TITLE, CONTENT, CREATE_DATE)
	  	  VALUES
	  	  	(BOARD_SEQ.NEXTVAL, #{title}, #{content}, SYSDATE)
	  </insert>
	  
	  <!--  
	  	3. 게시글 삭제
	  		1) parameterType : int boardNo
	  		2) resultType : 작성하면 안됩니다. 자동으로 int처리된다.	  		
	  -->
	  <delete id="deleteBoard" parameterType="int">
	  	DELETE
	  	  FROM BOARD
	  	 WHERE BOARD_NO = #{boardNo}
	  </delete>
	  
	  

</mapper>